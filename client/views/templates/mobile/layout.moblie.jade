template(name="layoutMobile")
  if isMobile
    +Scene
      +Node
        +DOMElement
          #wrapping-container
            +yield

          #list-fetching-bar Fetching next images...
        +SlideDownWindow id="login-form"        
          +DOMElement
            +login
        +SlideDownWindow id="register-form"            
          +DOMElement
            +register
        +SlideDownWindow id="forgot-password"            
          +DOMElement
            +forgotpassword
        +SlideDownWindow id="reset-form"            
          +DOMElement
            +resetpassword
        +SlideDownWindow id="post-content"
          +DOMElement
            +postContent
        +LoadingBox id="loading-box"
          +DOMElement
            #loading-box
              .loading-image
                img.rotating(src="/images/new_small_logo.png" width="100")

