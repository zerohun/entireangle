template(name="slideUpMenu")
  #slide-up-menu.block-center.text-center
    #slide-up-handle
      <span>Swipe Up!</span>
      hr
    if post
      #scrollable
        button.btn.btn-primary.btn-xs(data-toggle='modal', data-target='#shareModal') Share
        if isMyPost
          button#slide-up-edit.btn.btn-success.btn-xs(class="btn default") Edit
        button(class="btn default") Remove
        button(class="btn default") VR mode
        
        form#slide-up-edit-post
          div 
            | {{post.user.username}}

          h3.view-box
            | {{post.title}}
          .form-group
            input.form-control.text-center.edit-field.title-field(type="text", name="title", value="{{post.title}}")

          pre.view-box 
            | {{post.desc}} 
          .form-group
            textarea.form-control.edit-field.desc-field(name='desc') {{post.desc}}
          .form-group
            button.btn.btn-xs.edit-field(type='submit')
              | Save
            button#slide-up-cancel.btn.btn-xs.btn-danger.edit-field
              | Cancel

