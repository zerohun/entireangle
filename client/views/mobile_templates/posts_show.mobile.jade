template(name='PostsShowMobile')
  #container(style='width:100%; height:100%')
  if nextPostUrl
    #nextPostButton.next-prev-post.hide-on-modal
      a.waves-effect.waves-light(href=nextPostUrl)
        i.material-icons &#xE409;
  if prevPostUrl
    #prevPostButton.next-prev-post.hide-on-modal
      a.waves-effect.waves-light(href=prevPostUrl)
        i.material-icons &#xE408;
  if $eq isPublished false
    #publish-post-button.btn.red
      | Publish
  #menu-bar.hide-on-modal
    table
      tr
        td.menu-button
          a.waves-effect.waves-light.share-button.modal-trigger.inpage-buttons(href="#share-modal")
            i.mdi-social-share.white-text

        td.menu-button
          if didILikeIt
            a.waves-effect.waves-light.unlike-button.inpage-buttons
              i.mdi-action-star-rate.yellow-text
          else
            a.waves-effect.waves-light.like-button.inpage-buttons
              i.mdi-action-star-rate.white-text

        td.menu-button
          a.waves-effect.waves-light.inpage-buttons.modal-trigger(href="#content-modal")
            i.mdi-content-create.white-text
            span.red.comment-count-number
              | {{numberOfComments}}

        td.menu-button
          a#vr-mode-button.waves-effect.waves-light.inpage-buttons
            if isInVRMode
              i.mdi-action-visibility.yellow-text
            else
              i.mdi-action-visibility.white-text


        td.more-button
          a.waves-effect.waves-light.share-button.modal-trigger.inpage-buttons(href="#more-modal")
            i.mdi-navigation-more-vert.white-text

  #more-modal.modal.bottom-sheet
    .modal-content
      ul
        li.more-menu-items
          a#remove-button.waves-effect.waves-light.inpage-buttons.width-fill
            .row
              .col.s4.right-text
                i.mdi-action-delete.black-text
              .col.s8.left-text
                | Delete
            
  #share-modal.modal.bottom-sheet
    .modal-content
      h4 Sharing action
      hr
      +shareit

  #content-modal.modal
    .modal-content.centered-text
      button.btn.btn-floating.right.white.black-text.close-modal-button.waves-effect.waves-light
        i.material-icons close 
      if isMyPost
        button#edit-button.btn.btn-floating.view-box.green.darken-3
          | Edit

      .view-box
        h4#myModalLabel.modal-title {{title}}
        br.clear-both
        p.timestamp
          | {{createdAt}}
        p
          | tags
          .tags
            each albums
              span.chip 
                | {{title}}

        p
          pre.centered-text.
            {{desc}}
      .edit-field
        +autoForm id="editPost" type="update" collection="Post" doc=post
          +afFieldInput name='title'
          .tag-edit
            +tagAutocomplete
          br
          +afFieldInput name='desc'
          .switch
            label
              +afFieldInput name="isPublished" 
              span.lever
              | Public
          +afQuickField name="address" type="googleplace" opts=optsGoogleplace
          br
          if isMyPost
            button.btn.btn-tiny.light-green.darken-4(type='submit')
              | Done
            button#edit-cancel-button.btn.btn-tiny.btn.orange.darken-4(type='submit')
              | Cancel
      +comments
